<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet css/custom.css?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.pamsoft.imapcloud.controllers.PerformanceController">
	<children>
		<HBox>
			<children>
				<ToggleButton fx:id="toggleButton" mnemonicParsing="false" onAction="#createToggleButton" text="%performance.button.connect" />
			</children>
		</HBox>
      <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
      		<VBox fx:id="graphsContainer" VBox.vgrow="ALWAYS"/>
         </content>
      </ScrollPane>
	</children>
</VBox>
